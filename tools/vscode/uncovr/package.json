{
  "name": "uncovr",
  "displayName": "uncovr",
  "description": "R package development tools",
  "version": "0.0.1",
  "repository": "https://github.com/gaborcsardi/uncovr",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "List R Builds",
        "category": "Uncovr",
        "command": "uncovr.buildView"
      },
      {
        "title": "(Re)load R package",
        "category": "Uncovr",
        "command": "uncovr.reload"
      },
      {
        "title": "Test R package",
        "category": "Uncovr",
        "command": "uncovr.test"
      },
      {
        "title": "Document R package",
        "category": "Uncovr",
        "command": "uncovr.document"
      },
      {
        "title": "Re-run failing R package tests",
        "category": "Uncovr",
        "command": "uncovr.retest"
      },
      {
        "title": "R package test coverage report",
        "category": "Uncovr",
        "command": "uncovr.report"
      },
      {
        "title": "Show last R package tests results",
        "category": "Uncovr",
        "command": "uncovr.last"
      },
      {
        "title": "Test active file in R package",
        "category": "Uncovr",
        "command": "uncovr.testActive"
      },
      {
        "title": "Create LCOV coverage report for R package",
        "category": "Uncovr",
        "command": "uncovr.lcov"
      },
      {
        "title": "Build and install R package",
        "category": "Uncovr",
        "command": "uncovr.install"
      },
      {
        "title": "Coverage report for branch or changes",
        "category": "Uncovr",
        "command": "uncovr.diff"
      }
    ],
    "keybindings": [
      {
        "command": "uncovr.reload",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      },
      {
        "command": "uncovr.document",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      },
      {
        "command": "uncovr.test",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      },
      {
        "command": "uncovr.buildView",
        "key": "ctrl+shift+u b",
        "mac": "cmd+shift+u b"
      },
      {
        "command": "uncovr.report",
        "key": "ctrl+shift+u r",
        "mac": "cmd+shift+u r"
      },
      {
        "command": "uncovr.retest",
        "key": "ctrl+shift+u a",
        "mac": "cmd+shift+u a"
      },
      {
        "command": "uncovr.last",
        "key": "ctrl+shift+u p",
        "mac": "cmd+shift+u p"
      },
      {
        "command": "uncovr.testActive",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "uncovr.lcov",
        "key": "ctrl+shift+u l",
        "mac": "cmd+shift+u l"
      },
      {
        "command": "uncovr.install",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "uncovr.diff",
        "key": "ctrl+shift+u d",
        "mac": "cmd+shift+u d"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@posit-dev/positron": "^0.1.8",
    "get-folder-size": "^5.0.0",
    "rimraf": "^6.0.1"
  }
}
